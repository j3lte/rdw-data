{
  "tasks": {
    "fetch": "deno run -A scripts/fetch-databases.ts",
    "format": "deno fmt",
    "fetch-data": "deno run -A scripts/fetch-databases.ts && deno fmt -q ./src/providers && deno lint"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "singleQuote": false,
      "useTabs": false,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": []
    }
  }
}
